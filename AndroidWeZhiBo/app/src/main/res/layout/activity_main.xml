<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.we.androidwezhibo.common.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/ic_tab_home"
            app:iconSelected="@mipmap/tab_home"
            app:itemText="首页"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/green"
            app:itemTextSize="8sp"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/ic_tab_live"
            app:iconSelected="@mipmap/tab_live"
            app:itemText="直播"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/green"
            app:itemTextSize="8sp"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/ic_tab_my"
            app:iconSelected="@mipmap/tab_my"
            app:itemText="我的"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/green"
            app:itemTextSize="8sp"
            />

    </com.chaychan.library.BottomBarLayout>

</LinearLayout>